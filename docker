FROM registry.dev.sbiepay.sbi:8443/ubi9/nginx-126:9.6-1756959223
USER 0

# copy built FE assets (dist/) under the desired sub-path
RUN mkdir -p /usr/share/nginx/html/merchantsimulator
COPY dist/ /usr/share/nginx/html/merchantsimulator

# permissions
RUN chmod -R 755 /usr/share/nginx/html/merchantsimulator && \
    chown -R nginx:nginx /usr/share/nginx/html/merchantsimulator

# IMPORTANT: do NOT copy nginx.conf here; it will come from ConfigMap
EXPOSE 8080
CMD ["/usr/sbin/nginx", "-g", "daemon off;"]
