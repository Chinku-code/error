# =========================
# Global pipeline settings
# =========================
stages:
  - build
  - dockerbuild
  - promote
  - deploy

# ---- Global variables (tweak if needed) ----
variables:
  APP_NAME: "epay-website"
  VERSION: "$CI_COMMIT_SHORT_SHA"

  # Dev registry where we FIRST push the image built from this commit
  DEV_REGISTRY_HOST: "registry.dev.sbiepay.sbi:8443"
  DEV_REGISTRY_NAMESPACE: "library"

  # Other registries / namespaces used during promotion
  PREPROD_REGISTRY_HOST: "epaynonprod-registry-quay-quay-enterprise.apps.preprod.epay.sbi"
  PREPROD_NAMESPACE: "fe"

  PROD_REGISTRY_HOST: "registry.prod.epay.sbi:8443"
  PROD_NAMESPACE: "fe"

  # Build image (Node/npm) for FE build
  FE_BUILD_IMAGE: "registry.dev.sbiepay.sbi:8443/ubi9/reactjs_npm:20241113"

  # Speed up npm by caching to project dir (saved as job cache)
  NPM_CONFIG_CACHE: "$CI_PROJECT_DIR/.npm"

  # Podman in CI often runs without TLS verify inside cluster networks
  PODMAN_TLS_VERIFY: "false"

  # Deploy trigger target
  DEPLOY_TRIGGER_PROJECT: "epay/devops/deployment"
  DEPLOY_TRIGGER_BRANCH: "feature/dynamicnginx"

# =========================
# Reusable templates
# =========================

# Proxy-hardened, cache-aware Node build
.build_template: &build_template
  stage: build
  image:
    name: "$FE_BUILD_IMAGE"
    pull_policy: always
  cache:
    key: "${CI_PROJECT_PATH}-npm-${CI_COMMIT_REF_SLUG}"
    paths:
      - .npm/
    policy: pull-push
  script:
    - echo "===== SINGLE BUILD STARTED ====="
    # ---- kill bad proxies from runner/env (root cause of your failure) ----
    - unset HTTP_PROXY HTTPS_PROXY http_proxy https_proxy || true
    - git config --global --unset http.proxy || true
    - git config --global --unset https.proxy || true
    - npm config delete proxy || true
    - npm config delete https-proxy || true

    # ---- standard FE build with cache ----
    - npm cache clean --force
    - npm ci || npm install
    - npm run build:dev

    - echo "===== BUILD COMPLETE ====="
  artifacts:
    paths:
      - dist/
    expire_in: 1 week
  rules:
    - if: $CI_COMMIT_BRANCH # run on all branches

# Build/push once; produce SOURCE_IMAGE for promotions
.docker_template: &docker_template
  stage: dockerbuild
  image: quay.io/podman/stable:latest
  needs: ["fe_build"]
  variables:
    SOURCE_IMAGE: "$DEV_REGISTRY_HOST/$DEV_REGISTRY_NAMESPACE/$APP_NAME:$VERSION"
  script:
    - echo "Logging in to dev registry: $DEV_REGISTRY_HOST"
    - echo "$DEV_REGISTRY_PASSWORD" | podman login -u "$DEV_REGISTRY_USERNAME" --password-stdin "$DEV_REGISTRY_HOST"

    # Build a minimal context; assume Dockerfile uses ./dist
    - podman build -t "$SOURCE_IMAGE" .
    - podman push "$SOURCE_IMAGE"

    # expose for downstream jobs
    - echo "SOURCE_IMAGE=$SOURCE_IMAGE" >> docker.env
  artifacts:
    reports:
      dotenv: docker.env
  rules:
    - if: $CI_COMMIT_BRANCH

# Generic promote: retag & push same image to target registry/namespace
.promote_template: &promote_template
  stage: promote
  image: quay.io/podman/stable:latest
  needs: ["dockerbuild"]
  script:
    - echo "PROMOTING to $TARGET_ENV → $TARGET_REGISTRY_HOST/$TARGET_NAMESPACE/$APP_NAME:$VERSION"
    - echo "$TARGET_REGISTRY_PASSWORD" | podman login -u "$TARGET_REGISTRY_USERNAME" --password-stdin "$TARGET_REGISTRY_HOST"
    - podman pull "$SOURCE_IMAGE"
    - podman tag "$SOURCE_IMAGE" "$TARGET_REGISTRY_HOST/$TARGET_NAMESPACE/$APP_NAME:$VERSION"
    - podman push "$TARGET_REGISTRY_HOST/$TARGET_NAMESPACE/$APP_NAME:$VERSION"
  when: manual
  rules:
    - when: manual

# Trigger deployment repo (dynamic NGINX etc.)
.deploy_template: &deploy_template
  stage: deploy
  trigger:
    project: "$DEPLOY_TRIGGER_PROJECT"
    branch: "$DEPLOY_TRIGGER_BRANCH"
    strategy: depend
    forward:
      yaml_variables: true
      pipeline_variables: true
  when: manual
  rules:
    - when: manual

# =========================
# Jobs
# =========================

# 1) Single FE build (once per commit)
fe_build:
  <<: *build_template

# 2) Single container build (once per commit → dev registry)
dockerbuild:
  <<: *docker_template

# 3) Promotions: same image → multiple registries/namespaces (manual gates)

promote_sit:
  <<: *promote_template
  variables:
    TARGET_ENV: "sit"
    TARGET_REGISTRY_HOST: "$DEV_REGISTRY_HOST"
    TARGET_NAMESPACE: "$DEV_REGISTRY_NAMESPACE"
    TARGET_REGISTRY_USERNAME: "$DEV_REGISTRY_USERNAME"
    TARGET_REGISTRY_PASSWORD: "$DEV_REGISTRY_PASSWORD"

promote_uat:
  <<: *promote_template
  variables:
    TARGET_ENV: "uat"
    TARGET_REGISTRY_HOST: "$DEV_REGISTRY_HOST"
    TARGET_NAMESPACE: "$DEV_REGISTRY_NAMESPACE"
    TARGET_REGISTRY_USERNAME: "$DEV_REGISTRY_USERNAME"
    TARGET_REGISTRY_PASSWORD: "$DEV_REGISTRY_PASSWORD"

promote_preprod:
  <<: *promote_template
  variables:
    TARGET_ENV: "pre-prod"
    TARGET_REGISTRY_HOST: "$PREPROD_REGISTRY_HOST"
    TARGET_NAMESPACE: "$PREPROD_NAMESPACE"
    TARGET_REGISTRY_USERNAME: "$PREPROD_REGISTRY_USERNAME"
    TARGET_REGISTRY_PASSWORD: "$PREPROD_REGISTRY_PASSWORD"

promote_perf:
  <<: *promote_template
  variables:
    TARGET_ENV: "perf"
    TARGET_REGISTRY_HOST: "$PREPROD_REGISTRY_HOST"
    TARGET_NAMESPACE: "$PREPROD_NAMESPACE"
    TARGET_REGISTRY_USERNAME: "$PREPROD_REGISTRY_USERNAME"
    TARGET_REGISTRY_PASSWORD: "$PREPROD_REGISTRY_PASSWORD"

promote_prod:
  <<: *promote_template
  variables:
    TARGET_ENV: "prod"
    TARGET_REGISTRY_HOST: "$PROD_REGISTRY_HOST"
    TARGET_NAMESPACE: "$PROD_NAMESPACE"
    TARGET_REGISTRY_USERNAME: "$PROD_REGISTRY_USERNAME"
    TARGET_REGISTRY_PASSWORD: "$PROD_REGISTRY_PASSWORD"

# 4) Deploys (manual, per env). CD project consumes SOURCE_IMAGE + VERSION.

deploy_sit:
  <<: *deploy_template
  variables:
    ENV: "sit"
    VERSION: "$VERSION"

deploy_uat:
  <<: *deploy_template
  variables:
    ENV: "uat"
    VERSION: "$VERSION"

deploy_preprod:
  <<: *deploy_template
  variables:
    ENV: "pre-prod"
    VERSION: "$VERSION"

deploy_perf:
  <<: *deploy_template
  variables:
    ENV: "perf"
    VERSION: "$VERSION"

deploy_prod:
  <<: *deploy_template
  variables:
    ENV: "prod"
    VERSION: "$VERSION"
